{
  "name": "DesModder for Desmos",
  "description": "Supercharge your Desmos graph creation and sharing experience with many convenient features",
  "manifest_version": 3,
  "version": "0.14.3",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.desmos.com/calculator*",
        "https://*.desmos.com/geometry*",
        "https://*.desmos.com/3d*"
      ],
      "run_at": "document_start",
      "js": ["preload/content.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["script.js", "preloadScript.js"],
      "matches": ["*://*.desmos.com/*"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.desmos.com/*",
    "https://wakatime.com/"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "DesModder@jared-hughes.github.io"
    }
  }
}
