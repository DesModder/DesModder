{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "jsxFactory": "jsx",
    "target": "es2020",
    "allowJs": true,
    "strict": true,
    "baseUrl": "src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/",
    "./scripts/",
    "./loaders/",
    "./esbuild.mjs",
    "./.eslintrc.js"
  ]
}
